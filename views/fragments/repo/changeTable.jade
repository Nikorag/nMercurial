table.mdl-data-table.mdl-js-data-table.mdl-data-table--selectable.mdl-shadow--2dp
    thead
        tr
            th
                span
            th
                span Description
            th.sortable(sortable='changeset')
                span Changeset
            th.sortable(sortable='user')
                span Author
            th.sortable(sortable='date')
                span Date
            th
                span Revision
            th
                span Branch
    tbody
        tr(grid-item='', ng-class="(item.revision == currentRevision ? 'current' : '')+' '+(item.changeset == selectedChangeset ? 'selected' : '')", ng-click="viewRevision(item.changeset)", ng-dblclick="changeToRepo(item.changeset, $event)")
            td.mdl-data-table__cell--non-numeric.monospace.table-graph
                span(ng-repeat="graph in item.graph")
                    | &#13;{{graph}}
            td(ng-bind='item.summary')
            td(ng-bind="item.changeset")
            td(ng-bind='item.user')
            td(ng-bind='item.date')
            td(ng-bind='item.revision')
            td(ng-bind='item.branch')